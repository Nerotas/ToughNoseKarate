# Frontend Environment Configuration for Tough Nose Karate
# Copy this file to .env.local and update the values according to your setup

# =============================================
# REQUIRED CONFIGURATION
# =============================================

# API endpoint for the backend server
NEXT_PUBLIC_API_PATH=https://toughnosekarate-production.up.railway.app

# Application environment
NEXT_PUBLIC_APP_ENV=development

# =============================================
# OPTIONAL CONFIGURATION
# =============================================

# Application name (displayed in browser title, etc.)
NEXT_PUBLIC_APP_NAME="Tough Nose Karate"

# API version
NEXT_PUBLIC_API_VERSION=v1

# =============================================
# FEATURE FLAGS
# =============================================

# Enable analytics (only works in production)
NEXT_PUBLIC_ENABLE_ANALYTICS=false

# Enable debug logging
NEXT_PUBLIC_ENABLE_DEBUG=true

# =============================================
# ANALYTICS (OPTIONAL)
# =============================================

# Google Analytics tracking ID
# NEXT_PUBLIC_GA_TRACKING_ID=G-XXXXXXXXXX

# =============================================
# SECURITY (OPTIONAL)
# =============================================

# Client-side encryption key (if needed for local storage encryption)
# NEXT_PUBLIC_CRYPTO_KEY=your-crypto-key-here

# =============================================
# ENVIRONMENT SPECIFIC EXAMPLES
# =============================================

# Development example:
# NEXT_PUBLIC_API_PATH=http://localhost:3001
# NEXT_PUBLIC_APP_ENV=development
# NEXT_PUBLIC_ENABLE_DEBUG=true

# Staging example:
# NEXT_PUBLIC_API_PATH=https://api-staging.toughnosekarate.com
# NEXT_PUBLIC_APP_ENV=staging
# NEXT_PUBLIC_ENABLE_DEBUG=false
# NEXT_PUBLIC_ENABLE_ANALYTICS=false

# Production example:
# NEXT_PUBLIC_API_PATH=https://api.toughnosekarate.com
# NEXT_PUBLIC_APP_ENV=production
# NEXT_PUBLIC_ENABLE_DEBUG=false
# NEXT_PUBLIC_ENABLE_ANALYTICS=true
# NEXT_PUBLIC_GA_TRACKING_ID=G-XXXXXXXXXX
